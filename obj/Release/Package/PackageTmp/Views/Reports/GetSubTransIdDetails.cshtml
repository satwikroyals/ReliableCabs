@section scripts
{
     <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

<script>
    $(document).ready(function () {

        $("#btnSubmit").click(function () {

            var SubTransId = document.getElementById('SubTransId').value;
            var EfposAmount = document.getElementById('EfposAmount').value;
            var ChitsAmount = document.getElementById('ChitsAmount').value;
            var CashAmount = document.getElementById('CashAmount').value;
            var RentAmount = document.getElementById('RentAmount').value;
            var ChequeAmount = document.getElementById('ChequeAmount').value;
            var ChequeNumber = document.getElementById('ChequeNumber').value;
            var OnlineAmount = document.getElementById('OnlineAmount').value;
            var AdvanceAdjustment = document.getElementById('AdvanceAdjustment').value;
            var LoanToDriver = document.getElementById('LoanToDriver').value;
            var Comments = document.getElementById('Comments').value;


            $.ajax({
                url: '@Url.Action("EditSubTransDetails", "Reports")',
                type: "POST",
                //data: data,
                data:
                {
                    SubTransId: SubTransId,
                    EfposAmount: EfposAmount,
                    ChitsAmount: ChitsAmount,
                    CashAmount: CashAmount,
                    ChequeAmount: ChequeAmount,
                    ChequeNumber: ChequeNumber,
                    RentAmount: RentAmount,
                    OnlineAmount: OnlineAmount,
                    AdvanceAdjustment: AdvanceAdjustment,
                    LoanToDriver: LoanToDriver,
                    Comments: Comments
                },
                success: function (data) {

                    alert("Submitted");

                    window.location.href = "@Url.Action("Index", "Reports")";

                },

                error: function (jqXHR, status, text) {
                    alert("Not Submitted ");


                }


            });


        });

    });
</script>
