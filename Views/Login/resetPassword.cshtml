@model ReliableCabs.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
      <META HTTP-EQUIV="CACHE-CONTROL" CONTENT="NO-CACHE">
     <title>Reliable-Cabs</title>
    <link rel="stylesheet" href="~/Content/css/style.css"  />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" charset="utf-8"></script>
      <link rel="icon" type="image/png" sizes="16x16" href="~/Content/plugins/images/favicon.png">
   
  </head>
  <body>
      
      <form  class="login-form" action="../resetPasswords" method="post">
        <h1>Reset Password</h1>

          <div class="txtb">
          <input type="text" name="Name" id="txtName" required="">
           <span data-placeholder="Name"></span>
        </div>

        <div class="txtb">
          <input type="text" name="Password" id="txtPassword" required="">
           <span data-placeholder="Password"></span>
        </div>

          <div class="txtb">
          <input type="text" name="Confirm" id="txtconfirm" required="">
           <span data-placeholder="Confirm Password"></span>
        </div>
    
        <input type="submit" class="logbtn"  value="Submit">
         

          <div style="color:red;padding-top:15%;padding-left:2%">
         @if (ViewBag.ErrorMsg !=null){
          @Html.TextBox("Error", (object)ViewBag.ErrorMsg,new { @class = "redclass" })
         }
                </div>

      </form>

    

  </body>
</html>
 <script src="~/Content/js/jquery-2.2.0.min.js"></script>  
      
      <script type="text/javascript">
          $(".txtb input").text = ' ';

          $(".txtb input").on("focus", function () {
              $(this).addClass("focus");
          });

          $(".txtb input").on("blur", function () {
              if ($(this).val() == "")
                  $(this).removeClass("focus");
          });


     
      </script>
