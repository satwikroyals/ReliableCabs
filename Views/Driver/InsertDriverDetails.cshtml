                                                    </div>
                                                </div>
                                                <!--/span-->
                                               @* <div class="row">*@
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label col-md-5">Other Info</label>
                                                        <div class="col-md-7">														
                                                             @Html.TextBoxFor(x => x.OtherInfo, new { @class = "form-control" ,autocomplete = "off"})  
													@Html.TextBoxFor(m => m.ClientId, new { style = "display: none;" })
